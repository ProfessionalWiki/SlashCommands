{
	"name": "SlashCommands",

	"version": "1.0.0",

	"author": [
		"[https://Professional.Wiki/ Professional.Wiki]"
	],

	"url": "https://github.com/ProfessionalWiki/SlashCommands",

	"descriptionmsg": "slash-commands-description",

	"requires": {
		"MediaWiki": ">= 1.39.0"
	},

	"MessagesDirs": {
		"SlashCommands": [
			"i18n"
		]
	},

	"ResourceFileModulePaths": {
		"localBasePath": "resources",
		"remoteExtPath": "SlashCommands/resources"
	},

	"ResourceModules": {
		"ext.slash-commands.visual-editor": {
			"dependencies": [
				"ext.visualEditor.mwcore",
				"ext.visualEditor.mwimage.core",
				"mediawiki.widgets.Table"
			],
			"packageFiles": [
				"visual-editor/dist/assets/index.js"
			],
			"styles": [
				"visual-editor/dist/assets/index.css"
			],
			"messages": [
			]
		}
	},

	"AutoloadNamespaces": {
		"ProfessionalWiki\\SlashCommands\\": "src/"
	},

	"Hooks": {
		"MakeGlobalVariablesScript": "ProfessionalWiki\\SlashCommands\\EntryPoints\\MediaWikiHooks::onMakeGlobalVariablesScript"
	},

	"attributes": {
		"VisualEditor": {
			"PluginModules": [
				"ext.slash-commands.visual-editor"
			]
		}
	},

	"config_prefix": "sc",

	"config": {
		"Commands": {
			"value": {
				"Available": [
					{ "command": "bold", "icon": "bold"},
					{ "command": "italic", "icon": "italic"},
					{ "command": "underline", "icon": "underline"},
					{ "command": "strikethrough", "icon": "strikethrough" },
					{ "command": "big", "icon": "bigger" },
					{ "command": "small", "icon": "smaller" },
					{ "command": "code", "icon": "code"},
					{ "command": "heading1" },
					{ "command": "heading2" },
					{ "command": "heading3" },
					{ "command": "heading4" },
					{ "command": "heading5" },
					{ "command": "heading6" },
					{ "command": "table", "icon": "table" },
					{ "command": "gallery", "icon": "imageGallery" },
					{ "command": "comment", "icon": "notice" },
					{ "command": "link", "icon": "link" }
				],
				"Predefined" : [
					"bold", "italic", "underline", "strikethrough", "big", "small", "code"
				]
			}
		}
	},

	"manifest_version": 2
}
